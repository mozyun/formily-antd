{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/mozyun/formily-antd.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna clean",
    "build": "formily-tpl build",
    "build:docs": "dumi build",
    "lint": "eslint .",
    "release:force": "lerna publish from-package --yes --registry https://registry.npmjs.org/",
    "release": "lerna publish --registry https://registry.npmjs.org/",
    "start": "dumi dev",
    "test": "jest --coverage",
    "test:prod": "jest --coverage --silent",
    "preversion": "npm run build && npm run lint",
    "version:alpha": "lerna version prerelease --preid alpha",
    "version:beta": "lerna version prerelease --preid beta",
    "version:major": "lerna version major",
    "version:minor": "lerna version minor",
    "version:patch": "lerna version patch",
    "version:preminor": "lerna version preminor --preid beta",
    "version:rc": "lerna version prerelease --preid rc"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --ext .ts,.tsx,.js",
      "pretty-quick --staged",
      "git add"
    ],
    "*.md": [
      "pretty-quick --staged",
      "git add"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint --edit"
    }
  },
  "resolutions": {
    "rollup-plugin-typescript2": "^0.34.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@commitlint/prompt-cli": "^17.8.1",
    "@formily/template": "1.0.0-alpha.21",
    "@testing-library/jest-dom": "^5.17.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^24.9.1",
    "@types/node": "^18.18.9",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "antd": "^5.11.0",
    "cross-env": "^7.0.3",
    "dumi": "^1.1.54",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^10.1.0",
    "ghooks": "^2.0.4",
    "glob": "^8.1.0",
    "jest": "^26.6.3",
    "jest-codemods": "^0.19.1",
    "jest-dom": "^3.5.0",
    "jest-localstorage-mock": "^2.4.26",
    "jest-styled-components": "6.3.3",
    "jest-watch-lerna-packages": "^1.1.0",
    "lerna": "^7.4.2",
    "lint-staged": "^13.3.0",
    "mfetch": "^0.2.27",
    "moment": "^2.29.4",
    "prettier": "^2.8.8",
    "pretty-format": "^29.7.0",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "staged-git-files": "^1.3.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
